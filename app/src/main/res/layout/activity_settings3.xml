<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/Base.Theme.AppCompat.Light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d3d3d3" />

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/settingsMusic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSettings_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Connected Music"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSettings_music"
                android:layout_marginTop="8dp"
                android:text="Spotify, Device Library, etc"
                android:textColor="#d3d3d3" />


        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/settingsMusic"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/settingsLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/settingsMusic"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSettings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Notifications"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvSettings_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSettings_title"
                android:layout_marginTop="8dp"
                android:text="Receive app notifications"
                android:textColor="#d3d3d3" />

            <Switch
                android:id="@+id/swNotification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/settingsLayout"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/settingsLegal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/settingsLayout"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Legal"
                android:textSize="16dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/settingsLegal"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/settingsVersion"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/settingsLegal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSettings_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Version"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSettings_version"
                android:layout_marginTop="8dp"
                android:text="1.03-dev - 10228145"
                android:textColor="#d3d3d3" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/settingsVersion"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="#e0e0e0" />
    </RelativeLayout>

</LinearLayout>